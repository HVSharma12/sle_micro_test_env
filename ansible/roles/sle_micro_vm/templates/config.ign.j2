        "overwrite": true,
        "contents": {
          "source": "data:text/plain;charset=utf-8;base64,{{ ((vm_mgmt_user | default('sle_micro')) ~ ' ALL=(ALL:ALL) NOPASSWD:ALL') | b64encode }}"
        }
      }
    ]
  }
